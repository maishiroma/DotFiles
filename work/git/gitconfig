# My .gitconfig for work (macOS/linux/WSL2)

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[user]
	name = shiromatty14
	email = 237103470+shiromatty14@users.noreply.github.com
[core]
    pager = delta
	editor = vim
	ignorecase = true
    autocrlf = false
[credential]
	helper = store
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true  # use n and N to move between diff sections
    dark = true      # or light = true, or omit for auto-detection
    side-by-side = true
    line-numbers = true
[merge]
    conflictStyle = zdiff3
[alias]
	# Shortcut command to combine both rebase and fixup all in one line
	## Parameters: N= Number of commits to squash into, inclusive
	# Ex: git squash 2
	squash = "!f(){ git reset --soft HEAD~${1} && git commit --edit -m \"$(git log --format=%B --reverse HEAD..HEAD@{1})\"; };f"
[alias]
    # Cleanup all local branches that are merged to master or main
    cleanup = "!git branch --merged | grep  -v '\\*\\|master\\|main' | xargs -n 1 -r git branch -d && git fetch origin --prune"
[safe]
	directory = %(prefix)///wsl.localhost/Ubuntu/home/mattyshiro14/Projects/AWS_Infra
